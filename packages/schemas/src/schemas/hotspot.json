{
  "description": "Model for the @pie-elements/hotspot Interaction",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "prompt": {
      "description": "The question prompt or item stem",
      "type": "string",
      "title": "prompt"
    },
    "promptEnabled": {
      "description": "Indicates if the prompt is enabled",
      "type": "boolean",
      "title": "promptEnabled"
    },
    "imageUrl": {
      "description": "The image over which hotspots will be drawn",
      "type": "string",
      "title": "imageUrl"
    },
    "shapes": {
      "title": "Shape",
      "type": "object",
      "properties": {
        "rectangles": {
          "description": "the rectangles of the shape",
          "type": "array",
          "items": {
            "title": "Rectangle",
            "type": "object",
            "properties": {
              "id": {
                "description": "the id of the rectangle",
                "type": "string",
                "title": "id"
              },
              "correct": {
                "description": "indicates if the rectangle is correct",
                "type": "boolean",
                "title": "correct"
              },
              "height": {
                "description": "the height of the rectangle",
                "type": "number",
                "title": "height"
              },
              "width": {
                "description": "the width of the rectangle",
                "type": "number",
                "title": "width"
              },
              "x": {
                "description": "the x position of the rectangle",
                "type": "number",
                "title": "x"
              },
              "y": {
                "description": "the y position of the rectangle",
                "type": "number",
                "title": "y"
              }
            },
            "required": [
              "height",
              "width",
              "x",
              "y"
            ]
          },
          "title": "rectangles"
        },
        "polygons": {
          "description": "the polygons of the shape",
          "type": "array",
          "items": {
            "title": "Polygon",
            "type": "object",
            "properties": {
              "id": {
                "description": "the id of the polygon",
                "type": "string",
                "title": "id"
              },
              "correct": {
                "description": "indicates if the polygon is correct",
                "type": "boolean",
                "title": "correct"
              },
              "points": {
                "description": "the points of the polygon",
                "type": "array",
                "items": {
                  "title": "Point",
                  "type": "object",
                  "properties": {
                    "x": {
                      "description": "the x position",
                      "type": "number",
                      "title": "x"
                    },
                    "y": {
                      "description": "the y position",
                      "type": "number",
                      "title": "y"
                    }
                  },
                  "required": [
                    "x",
                    "y"
                  ]
                },
                "title": "points"
              }
            },
            "required": [
              "points"
            ]
          },
          "title": "polygons"
        }
      },
      "required": [
        "polygons",
        "rectangles"
      ]
    },
    "multipleCorrect": {
      "description": "Indicates if the item supports multiple correct answers",
      "type": "boolean",
      "title": "multipleCorrect"
    },
    "partialScoring": {
      "description": "Indicates if the item should use partial scoring",
      "type": "boolean",
      "title": "partialScoring"
    },
