<?xml version="1.0" encoding="UTF-8"?>
<assessmentItem
	xmlns="http://www.imsglobal.org/xsd/imsqti_v2p2"
	identifier="deletevalue-repeat-demo"
	title="deleteValue + repeat"
	adaptive="false"
	timeDependent="false">

	<responseDeclaration identifier="RESPONSE" cardinality="ordered" baseType="identifier"/>

	<responseDeclaration identifier="CLEAN" cardinality="ordered" baseType="identifier">
		<defaultValue/>
	</responseDeclaration>

	<outcomeDeclaration identifier="CLEAN_SIZE" cardinality="single" baseType="integer">
		<defaultValue><value>0</value></defaultValue>
	</outcomeDeclaration>
	<outcomeDeclaration identifier="REPEAT_SCALAR_SIZE" cardinality="single" baseType="integer">
		<defaultValue><value>0</value></defaultValue>
	</outcomeDeclaration>
	<outcomeDeclaration identifier="REPEAT_CONTAINER_SIZE" cardinality="single" baseType="integer">
		<defaultValue><value>0</value></defaultValue>
	</outcomeDeclaration>

	<itemBody>
		<p>Conformance: deleteValue + repeat.</p>
	</itemBody>

	<responseProcessing>
		<responseCondition>
			<responseElse>
				<setResponseValue identifier="CLEAN">
					<delete>
						<variable identifier="RESPONSE"/>
						<baseValue baseType="identifier">B</baseValue>
					</delete>
				</setResponseValue>

				<setOutcomeValue identifier="CLEAN_SIZE">
					<containerSize>
						<variable identifier="CLEAN"/>
					</containerSize>
				</setOutcomeValue>

				<setOutcomeValue identifier="REPEAT_SCALAR_SIZE">
					<containerSize>
						<repeat numberRepeats="3">
							<baseValue baseType="identifier">X</baseValue>
						</repeat>
					</containerSize>
				</setOutcomeValue>

				<setOutcomeValue identifier="REPEAT_CONTAINER_SIZE">
					<containerSize>
						<repeat numberRepeats="2">
							<ordered>
								<baseValue baseType="integer">1</baseValue>
								<baseValue baseType="integer">2</baseValue>
							</ordered>
						</repeat>
					</containerSize>
				</setOutcomeValue>
			</responseElse>
		</responseCondition>
	</responseProcessing>
</assessmentItem>


